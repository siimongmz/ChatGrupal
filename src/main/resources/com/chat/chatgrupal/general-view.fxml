<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox alignment="BOTTOM_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.chat.chatgrupal.ChatController">
    <HBox spacing="10" VBox.vgrow="ALWAYS" alignment="CENTER_RIGHT">
        <VBox VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" xmlns:fx="http://javafx.com/fxml" alignment="CENTER_LEFT">
            <TextArea fx:id="textAreaChat" editable="false" minWidth="200" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"/>
        </VBox>
        <VBox  xmlns:fx="http://javafx.com/fxml" alignment="CENTER_RIGHT">
            <ListView fx:id="usuarios" VBox.vgrow="SOMETIMES" minWidth="100" prefWidth="100">
            </ListView>
        </VBox>
    </HBox>
    <HBox xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="CENTER_LEFT">
        <TextArea fx:id="textAreaEnvio" HBox.hgrow="SOMETIMES" style="-fx-font-size: 30;" minWidth="200" maxHeight="100"/>
        <Button text="Enviar" onMouseClicked="#enviarMensaje" minHeight="100" minWidth="100" prefHeight="100" prefWidth="100"/>
    </HBox>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>

